---
// Astro component with all features
interface Props {
  initialValue?: number;
  step?: number;
  disabled?: boolean;
  showHistory?: boolean;
  theme?: "light" | "dark";
}

const {
  initialValue = 0,
  step = 1,
  disabled = false,
  showHistory = false,
  theme = "light"
} = Astro.props as Props;

const count = initialValue;
const isEven = count % 2 === 0;
---

<div 
    tabindex="0"
    data-count={count}
    aria-label={`Theme: ${theme}, Count: ${count}, Step: ${step}`}
    class={`theme-${theme}`}
    data-show-history={showHistory}
    role="region"
    data-theme={theme}
    id="theme-display"
    data-step={step}
    aria-label="Combined directive button"
      class:list={['active', isEven && 'even', disabled && 'disabled']}
      tabindex="0"
      id="combined-directive-button"
      class="combined-button"
      role="button"
      transition:animate="fade"
  >
    Theme: {theme}
    {showHistory && (
      <section aria-label="Counter history" id="counter-history-section" class="counter-history">
        <li aria-current="true" class="history-item current" role="listitem" id="current-history-item">Current: {count}</li>
      </section>
    )}
  </div>
